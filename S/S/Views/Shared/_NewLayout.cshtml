<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/assets/css/style-starter.css" rel="stylesheet" />
    <script src="~/assets/js/bootstrap.min.js"></script>
    <script src="~/assets/js/counter.js"></script>
    <script src="~/assets/js/jquery-3.3.1.min.js"></script>
    <script src="~/assets/js/theme-change.js"></script>
    <a href="~/assets/webfonts/fa-brands-400.eot"></a>
    <a href="~/assets/webfonts/fa-brands-400.ttf"></a>
    <a href="~/assets/webfonts/fa-brands-400.woff2"></a>
    <a href="~/assets/webfonts/fa-brands-400.woff"></a>
    <a href="~/assets/webfonts/fa-regular-400.eot"></a>
    <a href="~/assets/webfonts/fa-regular-400.ttf"></a>
    <a href="~/assets/webfonts/fa-regular-400.woff"></a>
    <a href="~/assets/webfonts/fa-regular-400.woff2"></a>
    <a href="~/assets/webfonts/fa-solid-900.eot"></a>
    <a href="~/assets/webfonts/fa-solid-900.ttf"></a>
    <a href="~/assets/webfonts/fa-solid-900.woff"></a>
    <a href="~/assets/webfonts/fa-solid-900.woff2"></a>
    
</head>
<body>
    <!-- header -->
    <header id="site-header" class="fixed-top">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light">

                @Html.ActionLink("Edu School", "Index", "Home", new { @class = "navbar-brand" },new { @class = "fas fa-graduation-cap" })
                <button class="navbar-toggler collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarScroll" aria-controls="navbarScroll" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon fa icon-expand fa-bars"></span>
                    <span class="navbar-toggler-icon fa icon-close fa-times"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarScroll">
                    <ul class="navbar-nav ms-auto my-2 my-lg-0 navbar-nav-scroll">
                        <li>@Html.ActionLink("Home", "Index", "Home", new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Courses", "Courses", "Home", new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home", new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("About", "About", "Home", new { @class = "nav-link" })</li>
                        <li><a class="nav-link" href="Registation/LoginRegistation">Login</a></li>
                    </ul>
                    <!-- search-right -->
                    <div class="header-search position-relative">
                        <div class="search-right mx-lg-2">
                            <a href="#search" class="btn search-btn p-0" title="search">
                                <i class="fas fa-search"></i>
                            </a>
                            <!-- search popup -->
                            <div id="search" class="pop-overlay">
                                <div class="popup">
                                    <form action="#search" method="GET" class="search-box">
                                        <input type="search" placeholder="Enter Keyword..." name="search"
                                               required="required" autofocus="">
                                        <button type="submit" class="btn">
                                            <span class="fas fa-search"
                                                  aria-hidden="true"></span>
                                        </button>
                                    </form>
                                </div>
                                <a class="close" href="#close">×</a>
                            </div>
                            <!-- //search popup -->
                        </div>
                    </div>
                    <!--//search-right-->
                </div>
            </nav>
        </div>
    </header>
    <!-- //header -->
    <div>
        @RenderBody()
    </div>
    <!-- footer block -->
    <footer class="w3l-footer-29-main">
        <div class="footer-29 pt-5 pb-4">
            <div class="container pt-md-4">
                <div class="row footer-top-29">
                    <div class="col-lg-4 col-md-6 footer-list-29">
                        <h6 class="footer-title-29">Contact Info </h6>
                        <p class="mb-2 pe-xl-5">
                            Address : 408/1, Kuratoli, Khilkhet,Dhaka 1229, Bangladesh
                        </p>
                        <p class="mb-2">Phone Number : <a href="tel:+8802-8813233"> +8802-8813233</a></p>
                        <p class="mb-2">Email : <a href="mailto:info@aiub.edu">info@aiub.edu</a></p>
                    </div>
                    <div class="col-lg-2 col-md-3 col-6 footer-list-29 mt-md-0 mt-4">
                        <ul>
                            <h6 class="footer-title-29">Quick Links</h6>
                            <li>@Html.ActionLink("About Us", "About", "Home")</li>
                            <li>@Html.ActionLink("Courses", "Courses", "Home")</li>
                            <li>@Html.ActionLink("Become a Teacher", "TeacherRegistation", "Registation")</li>
                            <li>@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                        </ul>
                    </div>
                    <div class="col-lg-2 col-md-3 col-6 ps-lg-5 ps-lg-4 footer-list-29 mt-md-0 mt-4">
                        <ul>
                            <h6 class="footer-title-29">Explore</h6>
                            <li><a href="#blog">Blog Posts</a></li>
                            <li><a href="#privacy">Privacy policy</a></li>
                            <li><a href="contact.html">Contact Us</a></li>
                            <li><a href="#license">License & uses</a></li>
                            <li><a href="#tutorials">Tutorials</a></li>
                        </ul>
                    </div>
                    <div class="col-lg-4 col-md-6 col-sm-8 footer-list-29 mt-lg-0 mt-4 ps-lg-5">
                        <h6 class="footer-title-29">Subscribe</h6>
                        <form action="#" class="subscribe d-flex" method="post">
                            <input type="email" name="email" placeholder="Email Address" required="">
                            <button class="button-style">
                                <span class="fa fa-paper-plane"
                                      aria-hidden="true"></span>
                            </button>
                        </form>
                        <p class="mt-3">Subscribe to our mailing list and get updates to your email inbox.</p>
                    </div>
                </div>
                <!-- copyright -->
                <p class="copy-footer-29 text-center pt-lg-2 mt-5 pb-2">
                    © 2022 Online Education System. 
                    All rights reserved. Design
                    by <a href="https://www.facebook.com/emranmho/" target="_blank">Emran</a>
                </p>
                <!-- //copyright -->
            </div>
        </div>
    </footer>
    <!-- //footer block -->
</body>
</html>
