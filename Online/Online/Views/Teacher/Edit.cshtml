@{
    ViewBag.Title = "Edit";
}

<h2>Edit Course</h2>

<form action="" method="post">
    Name : <input type="text" name="Name" value="@Model.Name" class="form-control" />
    <input type="hidden" name="Id" value="@Model.Id" />
    Details   : <input type="text" name="Details" value="@Model.Details" class="form-control" />
    Price  : <input type="text" name="Price" value="@Model.Price" class="form-control" />
    Student Capacity  : <input type="text" name="StudentCapacity" value="@Model.StudentCapacity" class="form-control" />
    <br />
    <input type="submit" value="Edit" class="btn btn-success" />
</form>